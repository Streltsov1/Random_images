<Window x:Class="Random_images.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Random_images"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel Margin="10">
            <Label Content="Width:" />
            <TextBox x:Name="widthTextBox" Margin="0 5" />
            <Label Content="Height:" />
            <TextBox x:Name="heightTextBox" Margin="0 5" />
            <Label Content="Category:" />
            <TextBox x:Name="categoryTextBox" Margin="0 5" />
            <Button Content="Завантажити" Click="DownloadButton_Click" />
        </StackPanel>
    </Grid>
</Window>
